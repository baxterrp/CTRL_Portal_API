@model CTRL.Portal.Common.Contracts.ResetPasswordEmailContract
    
@*<p>Your password reset code is @Model.ResetCode</p>*@

<table align='center' border='0' cellpadding='0' cellspacing='0'>
    <tbody>
        <tr>
            <td>
                <table align='center' bgcolor='#ffffff' border='0' cellpadding='0' cellspacing='0' style='background-color:#fff; width:806px;'>
                    <tbody>
                        <tr>
                            <td style="text-align: center;"><img src="https://via.placeholder.com/610x100?text=CTRL" alt="CTRL Logo" /></td>
                        </tr>
                    </tbody>
                </table>
                <table align='center' border='0' cellpadding='0' cellspacing='0' style='background-color:#fff; width:806px; padding-top: 30px; color: #022449;'>
                    <tbody>
                        <tr>
                            <td>
                                <table align='center' border='0' cellpadding='0' cellspacing='0' style='background-color:#fff; margin:0 auto; width:806px;'>
                                    <tbody>
                                        <tr>
                                            <td align='center' width='806px'>
                                                <div style='font-family:Arial, Helvetica, sans-serif; font-weight: 400; font-size: 18px; max-width: 620px; padding-bottom: 45px;'>
                                                    <p>
                                                        Sorry you’re having trouble accessing your account. To reset your password,
                                                        enter the 6-digit code below when prompted.
                                                        (If you exited the reset password process, <a href="#" target="_blank" style="color: #F27D42; text-decoration: none; font-weight: bold;">click here</a> to continue).
                                                    </p>
                                                    <p style='color: #F27D42; font-weight: bold; font-size: 65px; line-height: 98px; padding: 15px 0px 15px 0px; margin: 0px;'>@Model.ResetCode</p>
                                                    <p>
                                                        This code will be valid for 30 minutes. If you didn’t request
                                                        to reset your password, <a href="#" target="_blank" style="color: #F27D42; text-decoration: none; font-weight: bold;">please contact the CTRL team</a>.
                                                    </p>
                                                </div>
                                                <div style='font-family:Arial, Helvetica, sans-serif; font-weight: 400; font-size: 18px;'>
                                                    <hr style='border: 0.5px solid #E3E3E3; margin: 100px 0px 22px 0px; border-bottom: none;' />
                                                </div>
                                                <div style='font-family:Arial, Helvetica, sans-serif; font-weight: 400; font-size: 18px; padding-top: 10px;'>
                                                    <p>
                                                        Ran into some trouble? Received this email by mistake? <a href="#" target="_blank" style="color: #F27D42; text-decoration: none; font-weight: bold;">Please contact the CTRL team</a>
                                                    </p>
                                                    <p>&#169; CTRL, LLC @DateTime.Now.Year</p>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>